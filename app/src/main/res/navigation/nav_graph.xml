<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.handrehab.MainFragment"
        android:label="@string/main_fragment"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/CameraFragment" />
        <action
            android:id="@+id/action_main_to_permissions"
            app:destination="@id/permissionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/CameraFragment"
        android:name="com.example.handrehab.CameraFragment"
        android:label="@string/camera_fragment"
        tools:layout="@layout/fragment_camera">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/camera_to_permissons"
            app:destination="@id/permissionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/permissionsFragment"
        android:name="com.example.handrehab.PermissionsFragment"
        android:label="PermissionsFragment" >
        <action
            android:id="@+id/action_permissions_to_main_fragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/CameraFragment"
            app:popUpTo="@id/permissionsFragment"
            app:popUpToInclusive="true" />
    </fragment>
</navigation>