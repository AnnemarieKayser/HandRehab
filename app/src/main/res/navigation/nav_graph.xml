<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/MainFragment">

    <fragment
        android:id="@+id/MainFragment"
        android:name="com.example.handrehab.fragment.MainFragment"
        android:label="@string/hand_rehab"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_FirstFragment_to_SecondFragment"
            app:destination="@id/CameraFragment" />
        <action
            android:id="@+id/action_main_to_permissions"
            app:destination="@id/permissionsFragment" />
        <action
            android:id="@+id/action_MainFragment_to_exerciseListFragment"
            app:destination="@id/exerciseListFragment" />
        <action
            android:id="@+id/action_MainFragment_to_dataFragment"
            app:destination="@id/dataFragment" />
        <action
            android:id="@+id/action_MainFragment_to_plannerFragment"
            app:destination="@id/plannerFragment" />
    </fragment>
    <fragment
        android:id="@+id/CameraFragment"
        android:name="com.example.handrehab.fragment.CameraFragment"
        android:label="@string/camera_fragment"
        tools:layout="@layout/fragment_camera">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/camera_to_permissons"
            app:destination="@id/permissionsFragment" />
        <action
            android:id="@+id/action_CameraFragment_to_exerciseFragment"
            app:launchSingleTop="true"
            app:destination="@id/exerciseFragment"
            app:popUpTo="@id/exerciseFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/permissionsFragment"
        android:name="com.example.handrehab.PermissionsFragment"
        android:label="PermissionsFragment" >
        <action
            android:id="@+id/action_permissions_to_main_fragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/action_permissions_to_camera"
            app:destination="@id/CameraFragment"
            app:popUpTo="@id/permissionsFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/exerciseListFragment"
        android:name="com.example.handrehab.fragment.ExerciseListFragment"
        android:label="@string/title_exercise"
        tools:layout="@layout/fragment_exercise_list" >
        <action
            android:id="@+id/action_exerciseListFragment_to_MainFragment"
            app:destination="@id/MainFragment" />
        <action
            android:id="@+id/action_exerciseListFragment_to_exerciseFragment"
            app:destination="@id/exerciseFragment" />
        <action
            android:id="@+id/action_exerciseListFragment_to_plannerFragment"
            app:destination="@id/plannerFragment"
            app:popUpTo="@id/plannerFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/exerciseFragment"
        android:name="com.example.handrehab.fragment.ExerciseFragment"
        android:label="Ãœbung"
        tools:layout="@layout/fragment_exercise" >
        <action
            android:id="@+id/action_exerciseFragment_to_permissionsFragment"
            app:destination="@id/permissionsFragment" />
    </fragment>
    <fragment
        android:id="@+id/dataFragment"
        android:name="com.example.handrehab.fragment.DataFragment"
        android:label="@string/title_data"
        tools:layout="@layout/fragment_data" >
        <action
            android:id="@+id/action_dataFragment_self"
            app:destination="@id/dataFragment" />
    </fragment>
    <fragment
        android:id="@+id/plannerFragment"
        android:name="com.example.handrehab.PlannerFragment"
        android:label="@string/fragment_planner_title"
        tools:layout="@layout/fragment_planner">
        <action
            android:id="@+id/action_plannerFragment_to_exerciseListFragment"
            app:destination="@id/exerciseListFragment" />
    </fragment>
</navigation>